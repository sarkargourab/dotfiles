" Enable syntax highlighting
syntax on

" Set line numbers
set number

" Enable relative line numbers
set relativenumber

" Set tabs and indentation
set tabstop=4
set shiftwidth=4
set expandtab

" Enable mouse support
set mouse=a

" Enable search highlighting
set hlsearch
set incsearch

" Use system clipboard
set clipboard=unnamedplus

" Set a better command-line height
set cmdheight=2

" Enable auto-completion
set wildmenu

" Faster screen updates
set updatetime=300

" Show matching parentheses
set showmatch

" Use space instead of tabs
set smarttab

" Set color scheme (change to your preference)
colorscheme desert

